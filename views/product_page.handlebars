<link rel="stylesheet" href="/css/product_page.css">

<div class="product_wrapper">
    {{#if onsale}}
    <span class="best">Best Seller</span>
    {{/if}}
    <div class="product__img">
        <img src="{{image}}" alt="{{title}}">
    </div>
    <div class="product__nav">
        <h3 class="product__nav__title">{{title}}</h3>
        <p class="product__nav__desc">{{discription}}</p>
    </div>
    <div class="product__nav__price">
        {{#if onsale}}
        <p class="original">Original Price</p>
        <p class="product__nav__price_x">CAD $ {{price}}</p>
        <p class="currentPrice">Currnent Price</p>
        <p class="product__nav__sale">CAD $ {{sale_price}}</p>
        {{else}}
        <p class="currentPrice">Currnent Price</p>
        <p class="product__nav__sale">CAD $ {{price}}</p>
        {{/if}}
    </div>
    <form method="POST" action="/user/cart/{{this.id}}">
        <div class="buttons">
            <div class="stock">Stock : {{this.stock}}</div>
            <label for="quantity">Quantity</label>
            <select name="quantity">
                {{#each this.option}}
                <option name="quantity" value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <button type="submit">Go Cart</button>
        </div>
    </form>

</div>
<div class="nav_items">
    <div class="nav_items_category">
        <p class="nav_items_title">Category</p>
        <div class="nav_category">
            {{#each nav_items}}
            <a href="/products/{{this.category}}">
                <p class="nav_categroy_list">{{this.category}}</p>
            </a>
            {{/each}}
        </div>
    </div>
</div>